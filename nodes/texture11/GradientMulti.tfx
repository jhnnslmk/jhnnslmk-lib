Texture2D texture2d : PREVIOUS;

StructuredBuffer<float4> ColorBuffer;
StructuredBuffer<float> BreakPointBuffer;

SamplerState linearSampler : IMMUTABLE
{
	Filter = MIN_MAG_MIP_LINEAR;
	AddressU = Clamp;
	AddressV = Clamp;
};

struct psInput
{
	float4 p : SV_Position;
	float2 uv : TEXCOORD0;
};

float4 Tint <bool color = true;> = {1,1,1,1};
float4 PS(psInput input) : SV_Target
{
	uint size, stride;
	ColorBuffer.GetDimensions(size, stride);
	
	float4 c = float4(0,0,0,1);
	
	if (size == 1) c = ColorBuffer[0];
	
	if (size > 1)
	{
		for (uint i = 0; i < size-1; i++)
		{
//			float f = (i%2==1) ? 2 : 0.5f;
//			f = 2;
			c += (input.uv.x >= BreakPointBuffer[i] && input.uv.x <= BreakPointBuffer[i+1]) * lerp(ColorBuffer[i], ColorBuffer[i+1], pow(smoothstep(BreakPointBuffer[i], BreakPointBuffer[i+1], input.uv.x), 1));
		}
	}
	
	return c * Tint;
}

technique10 Process
{
	pass P0
	{
		SetPixelShader(CompileShader(ps_5_0,PS()));
	}
}



